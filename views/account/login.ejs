<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../common/head') %>
    </head>

    <body class="bg-gradient-dark">
        <div class="container">
            <!-- Outer Row -->
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4 font-weight-bold"><%= locals.token_name %> 지갑 로그인</h1>
                                        </div>
                                        <form class="user">
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" id="email" aria-describedby="emailHelp" placeholder="Enter Email Address..." />
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" id="password" placeholder="Password" />
                                            </div>
                                            <!-- <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck" />
                                                    <label class="custom-control-label" for="customCheck">Remember Me</label>
                                                </div>
                                            </div> -->
                                            <a href="#notexist" class="btn btn-primary btn-user btn-block" id="loginButton"> 로그인 </a>
                                            <hr />
                                            <a href="/account/regist" class="btn btn-dark btn-user btn-block"> 회원가입 </a>
                                            <a href="/account/password" class="btn btn-dark btn-user btn-block"> 비밀번호찾기 </a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- script -->
        <%- include('../common/script') %>
        <script>
            $(function () {
                $('#loginButton').on('click', async function (e) {
                    const id = $('#email').val();
                    const pw = $('#password').val();

                    const data = { id: id, pw: pw };

                    $.ajax({
                        type: 'POST',
                        url: '/account/login/check',
                        data: data,
                        success: function (response) {
                            window.location.replace(response.data.redirect);
                        },
                        error: function (error) {
                            const errorCode = error.responseJSON.data && error.responseJSON.data.code ? error.responseJSON.data.code : error.responseJSON.code ? error.responseJSON.code : 'UNKNOWN';
                            const message = error.responseJSON.data && error.responseJSON.data.code ? error.responseJSON.data.message : error.responseJSON.message ? error.responseJSON.message : 'ERROR';
                            alert(`[CODE - ${errorCode}]\n${message}`);
                        },
                    });
                });
            });
        </script>
    </body>
</html>

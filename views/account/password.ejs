            $(function () {
                $('#phoneCheckButton').on('click', function () {
                    const phone = $('#phone').val();

                    $('[name="phoneConfirmCodeWrapper"]').removeClass('d-none');
                    $('#phoneCheckButton').removeClass('btn-outline-success');
                    $('#phoneCheckButton').removeClass('btn-success');

                    $('[name="phoneConfirmCodeWrapper"]').addClass('d-none');
                    $('#phoneCheckButton').addClass('btn-outline-success');

                    $('#phoneCheckButton').html('Check');

                    $.ajax({
                        type: 'POST',
                        url: '/account/phone/check',
                        data: { phone: phone },
                        success: function (response) {
                            if (response.code !== 0) {
                                alert(response.message);
                                return false;
                            }

                            alert(response.data.message);

                            $('[name="phoneConfirmCodeWrapper"]').removeClass('d-none');
                            $('#phoneCheckButton').removeClass('btn-outline-success');
                            $('#phoneCheckButton').addClass('btn-success');
                            $('#phoneCheckButton').html('wait for...');
                        },
                        error: function (error) {
                            const errorCode = error.responseJSON.data && error.responseJSON.data.code ? error.responseJSON.data.code : error.responseJSON.code ? error.responseJSON.code : 'UNKNOWN';
                            const message = error.responseJSON.data && error.responseJSON.data.code ? error.responseJSON.data.message : error.responseJSON.message ? error.responseJSON.message : 'ERROR';
                            alert(`[CODE - ${errorCode}]\n${message}`);
                        },
                    });
                });


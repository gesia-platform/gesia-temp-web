                            $('#phoneCheckButton').removeClass('btn-success');
                            $('#phoneCheckButton').addClass('btn-success');

                            $('#phoneCheckButton').html('Confirmed');
                            $('#phoneCheckButton').attr('disabled', true);
                            $('#phone').attr('disabled', true);

                            $('#passwordResetButton').removeClass('d-none');
                            $('[name="passwordWrapper"]').removeClass('d-none');
